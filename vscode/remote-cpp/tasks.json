{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "process",
            "isBackground": false,
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "/bin/bash",
            "args": [
                "${workspaceRoot}/.vscode/task_Build.sh",
                "${workspaceRoot}"
            ],
            "problemMatcher": [ "$gcc" ]
        },
        {
            "label": "Clean",
            "type": "process",
            "isBackground": false,
            "group": "build",
            "command": "/bin/bash",
            "args": [
                "${workspaceRoot}/.vscode/task_Build.sh",
                "${workspaceRoot}",
                "clean"
            ],
            "problemMatcher": [ "$gcc" ]
        },
        {
            "label": "Debug",
            "type": "process",
            "isBackground": true,
            "command": "/bin/bash",
            "args": [
                "${workspaceRoot}/.vscode/task_Debug.sh"
            ],
            "problemMatcher": [
                {
                    "pattern": {
                        "regexp": "^"
                    },
                    "owner": "custom",
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "^Listening",
                        "endsPattern": "(\\d+)$"
                    }
                }
            ]
        }
    ]
}
